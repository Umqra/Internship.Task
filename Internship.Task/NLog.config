<?xml version="1.0" encoding="utf-8" ?>
<nlog xmlns="http://www.nlog-project.org/schemas/NLog.xsd"
      xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:schemaLocation="http://www.nlog-project.org/schemas/NLog.xsd NLog.xsd"
      autoReload="true"
      throwExceptions="false"
      internalLogLevel="Error" internalLogToConsole="true"
     >
  
  <extensions>
    <add assembly="StatisticServer"/>
  </extensions>

  <targets async="true">

    <target name="ColoredConsole" xsi:type="ColoredConsole"/>
    
    <target name="JsonFile" xsi:type="File" fileName="${basedir}/logs/${shortdate}.json" 
            archiveNumbering="Rolling" maxArchiveFiles="7" archiveAboveSize="10240" 
            archiveFileName="${basedir}/logs/archives/log.{#}.txt">
      <layout xsi:type="JsonLayout" includeAllProperties="true">
        <attribute name="time" layout="${longdate}" />
        <attribute name="level" layout="${level:upperCase=true}"/>
        <attribute name="message" layout="${message}"/>
        
        <attribute name="logger" layout="${logger}"/>
        <attribute name="callsite" layout="${callsite}"/>
        <attribute name="exception" encode="false" layout="${json-renderer:RenderException=True}"/>
        <attribute name="attachments" encode="false" layout="${json-renderer:RenderParameters=True}"/>
      </layout>
    </target>

  </targets>

  <rules>
    <logger name="*" minlevel="Warn" writeTo="JsonFile"/>
    <logger name="*" minlevel="Warn" writeTo="ColoredConsole"/>
    
    <logger name="HttpServerCore.*" writeTo="JsonFile" minlevel="Info"/>
    <logger name="StatisticServer.*" writeTo="JsonFile" minlevel="Info"/>
    <logger name="HttpServerCore.*" writeTo="ColoredConsole" minlevel="Trace"/>
    <logger name="StatisticServer.*" writeTo="ColoredConsole" minlevel="Trace"/>
  </rules>
</nlog>
